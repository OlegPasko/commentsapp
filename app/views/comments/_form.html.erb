<%= form_for(@comment, :html => { :class => 'form-vertical' }) do |f| %>
	<div class="control-group">
		<div class="controls">
			<%= f.text_field :name, size: 20, placeholder: 'Имя', class: '' %>
		</div>
	</div>
	<div class="control-group">
		<div class="controls">
			<%= f.text_area :body, rows: 5, placeholder: 'Комментарий', class: 'input-block-level' %>
		</div>
	</div>
	<%= f.hidden_field :parent_id, placeholder: 'Имя', value: params[:id] ? params[:id] : nil, class: '' %>
	<div class="control-group">
		<div class="controls">
			<%= f.submit 'Post it!', class: 'btn' %>
		</div>
	</div>
<% end %>